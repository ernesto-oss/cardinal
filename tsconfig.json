{
  "include": ["cli/.eslintrc.cjs"],
  "compilerOptions": {
    /* Compilation options */
    "target": "ESNExt",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    /* Emit rules */
    "outDir": "./dist",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
  
    /* Type-checking rules */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true
  }
}

{
	"name": "@cardinal/web",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"algolia": "docker run -it --name cardinal_algolia --env-file=./algolia/.env -e \"CONFIG=$(cat ./algolia/config.json | jq -r tostring)\" algolia/docsearch-scraper",
		"astro": "astro",
		"build": "astro build",
		"dev": "astro dev",
		"format": "prettier --check --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json,astro} --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern",
		"format:write": "pnpm format --write",
		"preview": "astro preview",
		"start": "astro dev"
	},
	"dependencies": {
		"@algolia/client-search": "^4.17.1",
		"@astrojs/image": "^0.16.9",
		"@astrojs/mdx": "^0.19.6",
		"@astrojs/react": "^2.2.1",
		"@astrojs/tailwind": "^3.1.3",
		"@docsearch/css": "^3.4.0",
		"@docsearch/react": "^3.4.0",
		"@radix-ui/react-collapsible": "^1.0.3",
		"@radix-ui/react-dialog": "^1.0.4",
		"astro": "^2.5.7",
		"clsx": "^1.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sharp": "0.32.1",
		"tailwindcss": "^3.3.2",
		"tailwindcss-animate": "^1.0.5"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.0.2",
		"@types/html-escaper": "^3.0.0",
		"@types/node": "^20.2.5",
		"@types/react": "^18.2.8",
		"@types/react-dom": "^18.2.4",
		"html-escaper": "^3.0.3",
		"lucide-react": "^0.236.0",
		"postcss-nesting": "^11.2.2",
		"prettier-plugin-astro": "^0.10.0",
		"prettier-plugin-tailwindcss": "^0.3.0"
	}
}

{
  "name": "create-cardinal-app",
  "type": "module",
  "version": "0.0.0",
  "description": "Cardinal is a CLI tool that helps you quickstart a full-stack monorepo project. You choose the parts you want, we put it together.",
  "author": "Ernesto Resende <dev@ernestoresende.com>",
  "packageManager": "pnpm@7.13.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "clean": "rimraf dist .turbo node_modules",
    "remove-app": "rimraf dist my-cardinal-app"
  },
  "dependencies": {
    "@clack/core": "^0.3.2",
    "@clack/prompts": "^0.6.3",
    "fs-extra": "^11.1.1",
    "picocolors": "^1.0.0",
    "sort-package-json": "^2.4.1",
    "type-fest": "^3.8.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.16"
  }
}

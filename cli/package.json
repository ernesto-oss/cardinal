{
  "name": "create-cardinal-app",
  "version": "0.1.2",
  "description": "Cardinal is a CLI tool that helps you quickstart a full-stack monorepo project. You choose the parts you want, we put it together.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernesto-oss/cardinal",
    "directory": "cli"
  },
  "license": "MIT",
  "author": "Ernesto Resende <dev@ernestoresende.com>",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-cardinal-app": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist .turbo node_modules",
    "dev": "tsup --watch",
    "format": "pnpm prettier --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} -u --no-error-on-unmatched-pattern --check --loglevel error",
    "format:write": "pnpm format -w",
    "lint": "eslint . -c .eslintrc.cjs",
    "lint:fix": "pnpm lint --fix",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/core": "^0.3.2",
    "@clack/prompts": "^0.6.3",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.0.0",
    "sort-package-json": "^2.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@types/eslint": "^8.40.0",
    "@types/fs-extra": "^11.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-plugin-import": "^2.27.5",
    "next": "^13.4.4",
    "tsup": "^6.7.0",
    "type-fest": "^3.11.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=16.8"
  }
}

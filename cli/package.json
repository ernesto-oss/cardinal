{
  "name": "create-cardinal-app",
  "type": "module",
  "version": "0.1.2",
  "description": "Cardinal is a CLI tool that helps you quickstart a full-stack monorepo project. You choose the parts you want, we put it together.",
  "license": "MIT",
  "author": "Ernesto Resende <dev@ernestoresende.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernesto-oss/cardinal",
    "directory": "cli"
  },
  "exports": "./dist/index.js",
  "bin": {
    "create-cardinal-app": "./dist/index.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "clean": "rimraf dist .turbo node_modules",
    "format": "pnpm format:check -w --loglevel error",
    "format:check": "pnpm prettier --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} -u --no-error-on-unmatched-pattern --check",
    "remove-app": "rimraf dist my-cardinal-app"
  },
  "dependencies": {
    "@clack/core": "^0.3.2",
    "@clack/prompts": "^0.6.3",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.0.0",
    "sort-package-json": "^2.4.1",
    "type-fest": "^3.11.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.2.5",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.16"
  }
}

{
  "name": "cardinal",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*/**"
  ],
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml",
    "db-generate": "turbo db-generate",
    "db-push": "turbo db-push",
    "db-seed": "turbo db-seed",
    "lint": "turbo lint",
    "build": "turbo build",
    "dev": "turbo dev --parallel --color",
    "format": "pnpm format:check -w --loglevel error",
    "format:check": "pnpm prettier --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} -u --no-error-on-unmatched-pattern --check"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "8.41.0",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rimraf": "latest",
    "turbo": "latest",
    "typescript": "^5.0.4"
  }
}

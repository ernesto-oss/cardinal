{
  "name": "@acme/ui",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup index.tsx --format cjs --dts --external react && tailwindcss -i ./src/styles/index.css -o ./dist/styles.css",
    "dev": "concurrently --no-color --names \"@acme/ui:build,tailwind\" \"tsup index.tsx --format cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles/index.css -o ./dist/styles.css --watch\"",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@acme/auth": "workspace:*",
    "@radix-ui/react-avatar": "^1.0.1",
    "@radix-ui/react-dropdown-menu": "^2.0.1",
    "clsx": "^1.2.1",
    "lodash.merge": "^4.6.2",
    "next": "^13.0.5",
    "react": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.6.0",
    "react-wrap-balancer": "^0.2.3"
  },
  "devDependencies": {
    "@acme/tailwind-config": "workspace:*",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "concurrently": "^7.5.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "tsup": "^6.5.0"
  }
}
